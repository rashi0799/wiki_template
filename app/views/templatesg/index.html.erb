<h2><%= l(:app_menu_global_templates) %></h2>
<table class="list">
  <thead>
    <tr>
      <th><%= l(:label_template) %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @templates.each do |template| %>
      <% unless template.new_record? %>
        <tr class="<%= cycle 'odd', 'even' %>">
          <td><%= h(template.name) %></td>
          <td class="buttons">
            <%= link_to l(:button_edit), { controller: 'templatesg', action: 'edit', id: template }, class: 'icon icon-edit' %>
            <%= link_to l(:button_delete), { controller: 'templatesg', action: 'destroy', id: template }, method: :delete, data: { confirm: l(:text_are_you_sure) }, class: 'icon icon-del' %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<p><%= link_to l(:label_template_new), { controller: 'templatesg', action: 'new' } %></p>

