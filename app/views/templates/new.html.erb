<h2>New Template</h2>

<%= form_for @mitemplate, url: { action: 'create' }, method: :post, html: { multipart: false, id: 'template_form' } do |f| %>
  <div class="box tabular">
    <p>
      <%= f.label :name, 'Template Name' %><br />
      <%= f.text_field :name, size: 30, required: true %>
    </p>
    <p>
      <%= f.label :text, 'Template Content' %><br />
      <%= f.text_area :text, cols: 100, rows: 25, class: 'wiki-edit', accesskey: accesskey(:edit) %>
    </p>
    <p><%= f.check_box :visible_children %></p>
    <%= submit_tag 'Create Template' %>
  </div>
<% end %>
